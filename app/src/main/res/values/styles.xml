<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/color_navigation_item</item>
        <item name="android:background">?colorOnPrimary</item>
        <item name="itemTextAppearanceActive">@style/text_navigation_active_labels</item>
    </style>

    <style name="text_navigation_active_labels">
        <item name="android:breakStrategy" tools:ignore="NewApi">simple</item>
        <item name="android:hyphenationFrequency" tools:ignore="NewApi">none</item>
    </style>


    <style name="MyCustomOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_text_input_layout</item>
        <item name="android:textColorHint">?colorPrimaryVariant</item>
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="editTextStyle">@style/MyTextInputEditText_outlinedBox</item>
        <item name="endIconTint">@color/color_icon_input_layout</item>
    </style>

    <style name="MyTextInputEditText_outlinedBox" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">

        <item name="android:textColor">?colorPrimary</item>
    </style>


    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_corner_app</item>
    </style>



    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MyTheme.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">?colorPrimary</item>
    </style>




    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="cardElevation">0dp</item>
    </style>


</resources>